class Points{
  
 //////////////////////////////////////////////////////////////////////////
 //PROPERTIES//////////////////////////////////////////////////////////////
 //////////////////////////////////////////////////////////////////////////
 PVector location;
 int index;
 float time;
  
 ////////////////////////////////////////////////////////////////////////// 
 //CONSTRUCTOR/////////////////////////////////////////////////////////////
 //////////////////////////////////////////////////////////////////////////
 Points(PVector location, int index, float time){
   
  this.location = location;
  this.index = index;
  this.time = time;
 }

 //////////////////////////////////////////////////////////////////////////
 //METHOD////////////////////////////////////////////////////////////////// 
 //////////////////////////////////////////////////////////////////////////
 void display(){
   
  if(index == 0){  
    stroke(255,255,255);
    strokeWeight(4);
    point(location.x,location.y,location.z);   
  }else if(index == 1){
    stroke(0,0,0);
    strokeWeight(4);
    point(location.x,location.y,location.z);   
  }   
 }
  
 PVector getLocation(){
   
  return location; 
 }
 
 int getIndex(){
   
  return index; 
 }
 
 float getTime(){
   
  return time; 
 }
}
